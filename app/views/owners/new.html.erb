  <div class = 'form-area'>
    <%= form_with model: @owner do |form| %>
      <div class ='form-group'>
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form', placeholder: "例: 根喪 太郎"%>
      </div>
      <div class ='form-group'>
        <%= form.label :email %>
        <%= form.email_field :email, class: 'form', placeholder: "例: nemo@sample.com" %>
      </div>
      <div class ='form-group'>
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form', placeholder: "パスワード" %>
      </div>
      <div class ='form-group'>
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: 'form', placeholder: "パスワード" %>
      </div>
      <div class = 'item'>
        <%= form.submit (t 'defaults.register'), class: 'button' %>
      </div>
    <% end %>