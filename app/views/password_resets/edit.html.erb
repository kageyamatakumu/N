<% content_for(:title, (t'.title')) %>
<div class="form-index">
  <div class="title">
    <h1><%= t'.title' %></h1>
  </div>
  <div class = 'info'>
    <h2><%= t'.info' %><h3>
  </div>
  <div class = 'form-area'>
    <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= @user.email %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form' %>
      </div>
      <div class = 'item'>
        <%= f.submit (t'.change'), class: 'button' %>
      </div>
    <% end %>
  </div>
</div>