<% content_for(:title, (t'.title')) %>

<div class="form-index">
  <div class="title">
    <h1><%= t'.title' %></h1>
  </div>
  <div class = 'info'>
    <h2><%= t'.info' %><h3>
  </div>
  <div class = "form-area">
    <%= form_with url: password_resets_path, method: :post, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form' %>
      </div>
      <div class = 'item'>
        <%= f.submit (t'.application'), class: 'button' %>
      </div>
    <% end %>
  </div>
</div>