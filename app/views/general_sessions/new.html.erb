    <div class = 'form-area'>
        <%= form_with url: general_login_path do |form| %>
            <div class ='form-group'>
                <%= form.label :email, General.human_attribute_name(:email) %>
                <%= form.email_field :email, class: 'form'  %>
            </div>
            <div class ='form-group'>
                <%= form.label :password,  General.human_attribute_name(:password)%>
                <%= form.password_field :password, class: 'form'  %>
            </div>
            <div class = 'item'>
                <%= form.submit (t 'defaults.login'), class: 'button' %>
            </div>
        <% end %>
    </div>
